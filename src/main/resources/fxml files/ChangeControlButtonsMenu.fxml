<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ChangeControlButtonsMenuController"
            prefHeight="700.0" prefWidth="1000.0" stylesheets="@../CSS/style.css"
            styleClass="main-profile-background">
            <center>
                <VBox alignment="CENTER" spacing="10">
                    <Label styleClass="title" text="Choose a radio button and then press your desired keys"/>
                    <HBox alignment="CENTER" spacing="15">
                        <RadioButton fx:id="radio1" styleClass="subtitle" text="move right"/>
                        <RadioButton fx:id="radio2" styleClass="subtitle" text="move left"/>
                        <RadioButton fx:id="radio3" styleClass="subtitle" text="move up"/>
                        <RadioButton fx:id="radio4" styleClass="subtitle" text="move down"/>
                        <RadioButton fx:id="radio5" styleClass="subtitle" text="drop bomb"/>
                        <RadioButton fx:id="radio6" styleClass="subtitle" text="drop R bomb"/>
                    </HBox>
                    <Button styleClass="subtitle" text="Back to settings" onMouseClicked="#goToSettingsMenu"/>
                </VBox>
            </center>
</BorderPane>
